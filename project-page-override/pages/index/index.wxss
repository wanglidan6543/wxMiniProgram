/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
}

.test {
  width: 100%;
  height: 400rpx;
}

.text-area {
  width: 90%;
  height: 200rpx;
  border: 1px solid #eee;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
  overflow: scroll;
  z-index: 1000;
}
.mask .content {
  position: absolute;
  top: 50%;
  left: 32rpx;
  right: 32rpx;
  transform: translate(0, -50%);
  background-color: #fff;
  border-radius: 8rpx;
  padding: 35rpx 0 20rpx 0;
  height: 500rpx;
}